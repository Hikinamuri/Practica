<Window x:Class="Project.orderChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="User Page" Height="900" Width="800">
    <Grid Background="#f5f5f5">
        <StackPanel Background="#FFFFFF" Margin="50" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Label Content="Редактирование" HorizontalContentAlignment="Center" Foreground="#333333" FontSize="28" FontWeight="Bold"/>
            </StackPanel>
            <DataGrid Name="OrderDataGrid" Height="378">
                <DataGrid.Columns>
                </DataGrid.Columns>
            </DataGrid>
            <Button Click="SendRequest" Margin="0,20,0,0" FontSize="20" Background="#2194F3" Foreground="White" Height="45" BorderThickness="0" Cursor="Hand">
                <Border CornerRadius="20">
                    <TextBlock Text="Отправить заявку" Padding="10"/>
                </Border>
            </Button>
        </StackPanel>

        <!-- Order Status Section -->
    </Grid>
</Window>
